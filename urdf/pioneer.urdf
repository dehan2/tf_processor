</link>

<joint name="base_sonar_frontal_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.25 0 0.27"/>
    <parent link="base_link"/>
    <child link="Sonar_delantero_link"/>
  </joint>

<joint name="base_sonar_trasero_joint" type="fixed">
    <origin rpy="0 0 0" xyz="-0.25 0 0.27"/>
